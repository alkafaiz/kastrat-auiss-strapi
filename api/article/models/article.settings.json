{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "New title",
      "required": true,
      "unique": true,
      "minLength": 10
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "author": {
      "via": "articles",
      "plugin": "users-permissions",
      "model": "user"
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "maxLength": 250
    },
    "published_date": {
      "type": "date",
      "required": true
    }
  }
}
